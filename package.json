{
  "name": "vscode-shader",
  "displayName": "vscode-shader",
  "description": "Shader languages support for Visual Studio Code",
  "version": "0.1.0",
  "icon": "./etc/logo.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shader-ls/vscode-shader"
  },
  "publisher": "shader-ls",
  "keywords": [
    "shader",
    "hlsl",
    "glsl",
    "cg",
    "lsp",
    "langauge-server",
    "unity"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:shaderlab"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-shader.start",
        "title": "Start `shader langauge server`"
      },
      {
        "command": "vscode-shader.stop",
        "title": "Stop `shader langauge server`"
      }
    ],
    "configuration": {
      "title": "Shader LS",
      "properties": {
        "ShaderLab.CompletionWord": {
          "type": "boolean",
          "description": "Non-nil to enable word completion.",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "prepare": "npm install -g @vscode/vsce",
    "vsix": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}